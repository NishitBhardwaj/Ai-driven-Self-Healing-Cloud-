{
  "dashboard": {
    "title": "Agent Actions Dashboard",
    "tags": ["agents", "actions", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Self-Healing Actions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(heal_actions_total[5m])",
            "legendFormat": "Heal Actions/sec"
          },
          {
            "expr": "rate(heal_success_total[5m])",
            "legendFormat": "Success/sec"
          },
          {
            "expr": "rate(heal_failures_total[5m])",
            "legendFormat": "Failures/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Scaling Actions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(scaling_actions_total[5m])",
            "legendFormat": "Scaling Actions/sec"
          },
          {
            "expr": "rate(scale_up_total[5m])",
            "legendFormat": "Scale Up/sec"
          },
          {
            "expr": "rate(scale_down_total[5m])",
            "legendFormat": "Scale Down/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Task-Solving Actions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(tasks_completed_total[5m])",
            "legendFormat": "Completed/sec"
          },
          {
            "expr": "rate(task_failures_total[5m])",
            "legendFormat": "Failures/sec"
          },
          {
            "expr": "rate(tasks_created_total[5m])",
            "legendFormat": "Created/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Action Success Rates",
        "type": "graph",
        "targets": [
          {
            "expr": "heal_success_rate",
            "legendFormat": "Self-Healing"
          },
          {
            "expr": "scaling_success_rate",
            "legendFormat": "Scaling"
          },
          {
            "expr": "task_success_rate",
            "legendFormat": "Task-Solving"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Agent Action Summary",
        "type": "table",
        "targets": [
          {
            "expr": "sum by (agent) (rate(agent_actions_total[5m]))",
            "legendFormat": "{{agent}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ]
  }
}

