{
  "dashboard": {
    "title": "Error Rates Dashboard",
    "tags": ["errors", "rates"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Error Rate by Agent",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(agent_errors_total[5m])",
            "legendFormat": "{{agent}} - {{error_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Healing Failures",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(heal_failures_total[5m])",
            "legendFormat": "Failures/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Task Failures",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(task_failures_total[5m])",
            "legendFormat": "Failures/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Rate Trend",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(agent_errors_total[5m])) by (agent)",
            "legendFormat": "{{agent}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Success vs Failure Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(agent_requests_total{status=\"success\"}[5m])",
            "legendFormat": "Success - {{agent}}"
          },
          {
            "expr": "rate(agent_requests_total{status=\"failure\"}[5m])",
            "legendFormat": "Failure - {{agent}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ]
  }
}

